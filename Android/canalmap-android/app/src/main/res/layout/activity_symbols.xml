<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tyctak.canalmap.Activity_Symbols">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <include
            layout="@layout/toolbar_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbolsSummary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="How to Filter"/>

        <TextView
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbolsFilter"/>

        <TextView
            android:id="@+id/premiumNotice"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textStyle="italic|bold"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NB* The ability to filter a symbol is a premium feature, please consider subscribing to get this additional access."/>

        <ProgressBar
            android:id="@+id/progressSymbols"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:theme="@style/AppTheme.WhiteAccent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollViewSymbols"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View style="@style/Divider"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    android:id="@+id/icon_flow_services"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:flexWrap="wrap">

                </com.google.android.flexbox.FlexboxLayout>

                <!--<org.apmem.tools.layouts.FlowLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/icon_flow_services"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginBottom="20dp">-->

                <!--</org.apmem.tools.layouts.FlowLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food &amp; Drink"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View style="@style/Divider"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    android:id="@+id/icon_flow_fooddrink"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:flexWrap="wrap">

                </com.google.android.flexbox.FlexboxLayout>

                <!--<org.apmem.tools.layouts.FlowLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/icon_flow_fooddrink"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginBottom="20dp">-->

                <!--</org.apmem.tools.layouts.FlowLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Travel"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View style="@style/Divider"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    android:id="@+id/icon_flow_travel"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:flexWrap="wrap">

                </com.google.android.flexbox.FlexboxLayout>

                <!--<org.apmem.tools.layouts.FlowLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/icon_flow_travel"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginBottom="20dp">-->

                <!--</org.apmem.tools.layouts.FlowLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Essentials"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View style="@style/Divider"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    android:id="@+id/icon_flow_essentials"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:flexWrap="wrap">

                </com.google.android.flexbox.FlexboxLayout>

                <!--<org.apmem.tools.layouts.FlowLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/icon_flow_essentials"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginBottom="20dp">-->

                <!--</org.apmem.tools.layouts.FlowLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View style="@style/Divider"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    android:id="@+id/icon_flow_entertainment"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:flexWrap="wrap">

                </com.google.android.flexbox.FlexboxLayout>

                <!--<org.apmem.tools.layouts.FlowLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/icon_flow_entertainment"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginBottom="20dp">-->

                <!--</org.apmem.tools.layouts.FlowLayout>-->

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="5dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
